<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_travel_height"
    android:duplicateParentState="true">
    <!--android:layout_width="@dimen/item_rv_travel_background_wid"-->

    <ImageView
        android:id="@+id/item_tracel_rv_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_rv_travel_background_hei"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/item_tracel_rv_background_mar"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/item_tracel_rv_rlayout_mar">
        <ImageView
            android:layout_width="match_parent"
            android:layout_margin="@dimen/item_rv_travel_background_mar"
            android:layout_height="@dimen/item_rv_travel_background_hei"
            android:layout_centerInParent="true"
            android:src="@color/item_travel_rv_alpha"/>

        <ImageView
            android:id="@+id/best_img"
            android:layout_width="@dimen/item_travel_best_wid"
            android:layout_height="@dimen/item_travel_best_hei"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/item_travel_best_martop"
            android:src="@mipmap/best"
            android:visibility="visible" />

        <TextView
            android:id="@+id/item_travel_rv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/item_travel_rv_title_marbottom"
            android:layout_marginLeft="@dimen/item_travel_rv_title_marleft"
            android:layout_marginTop="@dimen/item_travel_rv_title_martop"
            android:layout_toLeftOf="@id/best_img"
            android:layout_weight="1"
            android:text="@string/title"
            android:textColor="@android:color/white"
            android:textSize="@dimen/item_travel_rv_title_text_size" />

        <TextView
            android:id="@+id/item_travel_rv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_travel_rv_title"
            android:layout_marginLeft="@dimen/item_travel_rv_time_marleft"
            android:text="@string/time"
            android:textColor="@android:color/white"
            android:textSize="@dimen/item_travel_rv_tiem_text_size" />

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/item_travel_rv_head_long"
        android:layout_height="@dimen/item_travel_rv_head_long"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/item_travel_rv_head_mar"
        android:layout_marginLeft="@dimen/item_travel_rv_head_mar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:layout_width="@dimen/item_travel_card_card_long"
                android:layout_height="@dimen/item_travel_card_card_long"
                android:layout_centerInParent="true">
,
                <ImageView
                    android:id="@+id/item_travel_rv_head_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />
            </android.support.v7.widget.CardView>

        </RelativeLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>

